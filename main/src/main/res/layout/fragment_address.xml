<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="@string/default_address"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:textColor="#666666"
        android:gravity="center_vertical"
        android:textSize="15.75sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:background="#2e2f33"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/address_name"
            android:layout_width="wrap_content"
            android:layout_height="37.75dp"
            android:layout_marginLeft="26dp"
            android:textSize="15.75sp"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:text="用于显示姓名" />

        <TextView
            android:id="@+id/address_number"
            android:layout_width="wrap_content"
            android:layout_height="26.75dp"
            android:text="用于显示电话号码"
            android:textSize="13.75sp"
            android:layout_marginLeft="26dp"
            android:textColor="#cccccc" />

        <TextView
            android:id="@+id/address_address"
            android:layout_width="wrap_content"
            android:layout_height="26.75dp"
            android:text="用于显示地址"
            android:textSize="13.75sp"
            android:layout_marginLeft="26dp"
            android:textColor="#cccccc" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="@string/other_address"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:textColor="#666666"
        android:gravity="center_vertical"
        android:textSize="15.75sp" />

    <com.okm_android.main.View.ListView.swipemenulistview.SwipeMenuListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.okm_android.main.View.ListView.swipemenulistview.SwipeMenuListView>


</LinearLayout>