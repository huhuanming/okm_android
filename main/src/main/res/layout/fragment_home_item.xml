<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/home_shop_background_style"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112.5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_marginTop="10dp"
            android:layout_width="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_height="90dp"
            android:src="@drawable/lingjiaxiaochu"
            app:border_width="2dp"
            app:border_color="#ffffff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/profile_image"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/home_item_name"
                android:textSize="18sp"
                android:textColor="#656565"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邻家小厨"
                />
            <TextView
                android:id="@+id/home_item_price"
                android:textSize="13.5sp"
                android:textColor="#989898"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人均: 20元"
                />
            <TextView
                android:id="@+id/home_item_time"
                android:textSize="13.5sp"
                android:textColor="#989898"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送餐时间： 30分钟"
                />
            </LinearLayout>
    </RelativeLayout>

</LinearLayout>
