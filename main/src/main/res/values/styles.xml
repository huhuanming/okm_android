<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="DrawerMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#ff060606</item>
    </style>

    <style name="MyTheme" parent="@style/AppTheme">
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>
    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/bbutton_info_pressed_edge</item>
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
        //替换actionbar背景图片
        <!--

                <item name="android:displayOptions">showTitle</item> //只显示title 不显示logo

        -->
    </style>


    <style name="mySpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#808080</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <style name="AcBar_titleStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MenuTextStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="shake_style" parent="@style/AppTheme">
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/Shake_ActionBarStyle</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>
    <style name="Shake_ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">#00a3e9</item>
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
        //替换actionbar背景图片
        <!--

                <item name="android:displayOptions">showTitle</item> //只显示title 不显示logo

        -->
    </style>

</resources>
